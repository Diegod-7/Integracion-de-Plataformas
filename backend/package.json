    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.1",
    "transbank-sdk": "^5.0.0"
  },
  "devDependencies": {
    "exceljs": "^4.4.0",
    "jest": "^30.0.2",
    "jest-html-reporters": "^3.1.7",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.1",
    "xlsx": "^0.18.5"
  }
